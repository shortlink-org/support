  "dependencies": {
    "@ai-sdk/openai": "^2.0.0",
    "@mastra/core": "^0.12.1",
    "@mastra/libsql": "^0.12.0",
    "@mastra/mcp": "^0.10.9",
    "@mastra/memory": "^0.12.0",
    "ai": "^5.0.0",
