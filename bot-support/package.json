  "dependencies": {
    "@ai-sdk/openai": "^2.0.0",
    "@mastra/core": "^0.12.1",
    "@mastra/libsql": "^0.12.0",
    "@mastra/mcp": "^1.0.0",
    "@mastra/memory": "^0.14.0",
